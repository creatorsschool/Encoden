<div class="row">
	<div class="col s12 m4 l3 card teal lighten-5">
		<%= render partial: '/admin/sidebar' %>
	</div>
	<div class="col s12 m8 l9">
		<div class="row">
			<h1>Let's Edit Your Course!</h1>
			<%= form_for @course do |f| %>
			<div class="row">
				<div class="col s6">
					<div class="input-field">
						<%= f.label :name %><br>
						<%= f.text_field :name %>
					</div>
					<div class="input-field">
						<%= f.label :description %><br>
						<%= f.text_area :description, cols: 3, class:"materialize-textarea", required: true %>
					</div>
					<div class="input-field">
						<%= f.label :duration %><br>
						<%= f.number_field :duration %>
					</div>
					<div class="input-field">
						<%= f.label :price %><br>
						<%= f.text_field :price %>
					</div>
					<%= f.submit class: "btn" %>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>