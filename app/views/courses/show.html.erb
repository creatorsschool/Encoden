<div class="row">
	<div class="col s12 m4 l3 card teal lighten-5">
		<%= render partial: '/admin/sidebar' %>
	</div>
	<div class="col s12 m8 l9">
		<div class="col-md-9">
			<div class="row">
				<div class="col-md-10">
					<div class="card">
						<h1><%= @course.name %></h1>
						<ul>
							<li><strong>Description: </strong><%= @course.description %></li>
							<li><strong>Duration: </strong> <%= @course.duration %></li>
							<li><strong>Price: </strong> <%= @course.formatted_price %></li>
						</ul>
					</div>
					<table class="table table-bordered table-striped" id="sortable" data-course-id=<%= @course.id %>>
						<thead>
							<tr>
								<th>
									Chapter
								</th>
								<th>
									Chapter Actions
								</th>
								<th>
									Lesson Actions
								</th>
							</tr>
						</thead>
						<tbody>
							<% @chapters.each do |chapter| %>
							<tr data-item-id=<%= "#{chapter.id}" %> class="item">
								<td>
									<%= chapter.name %>
								</td>
								<td>
									<%= link_to 'Edit', link_to edit_course_chapter_path(course, chapter) %> | <%= link_to 'Delete', link_to course_chapter_path(course, chapter), method: :delete %>
								</td>
								<td>
									<%= link_to 'Show Lessons', course_chapter_path(@course, chapter) %> | <%= link_to 'Add Lesson', course_chapter_path(@course, chapter) %>
								</td>
							</tr>
							<% end %>
						</tbody>
					</table>
					<%= link_to 'Add Chapter', new_course_chapter_path(@course.id), class: "btn" %>
				</div>
			</div>
		</div>
	</div>