<div class="row">
	<div class="col s12 m4 l3 card teal lighten-5">
		<%= render partial: '/admin/sidebar' %>
	</div>
  <div class="col s12 m8 l9">
	<div class="col-md-9">
		<div class="row">
			<div class="col-md-10">
				<h1><%= @course.name %></h1>
				<ul>
					<li><strong>Description: </strong><%= @course.description %></li>
					<li><strong>Duration: </strong> <%= @course.duration %></li>
					<li><strong>Price: </strong> <%= @course.price %>â‚¬</li>
				</ul>
				<ol>
					<% @course.chapters.each do |chapter| %>
					<%= link_to "Chapters", course_chapter_path(@course, chapter) %>
					<li>
						Chapter Name: <%= chapter.name %><br>
						Chapter Descripion: <%= chapter.description %>
						<%= link_to 'Edit Chapter', edit_course_chapter_path(@course, chapter), class: "btn" %>
						<%= link_to 'Delete', course_chapter_path(@course, chapter), class: "btn",
						method: :delete,
						data: { confirm: 'Do you really want to delete?' } %>
					</li>
					<ol>
						<% chapter.lessons.each do |lesson| %>
						<%= link_to "Lessons", course_chapter_lesson_path(@course, chapter, lesson) %>
						<li>
							Name: <%= lesson.name %>
							<ul>
								<li>
									Description: <%= lesson.description %>
								</li>
							</ul>
						</li>
						<% end %>
					</ol>
					<% end %>
				</ol>
				<%= link_to 'Add Chapter', new_course_chapter_path(@course.id), class: "btn" %>
			</div>
		</div>
	</div>
</div>
</div>
