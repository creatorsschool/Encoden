<div class="row">
	<div class="col s12 m4 l3">
		<%= render partial: '/admin/sidebar' %>
	</div>
	<div class="col s12 m8 l9">
		<div class="row">
			<h1>Hello <%= current_user.name %>!</h1>
			<p>Let's get started with the creation of a new course.</p>
			<p>Please add your course name and a description of what you want to teach:</p>
			<%= form_for :course, url: courses_path do |f| %>
				<div class="row">
					<div class="col s6">
						<div class="input-field">
							<%= f.label :name, "Course Name" %>
							<%= f.text_field :name, class: "validate", required: true %>
						</div>

						<div class="input-field">
							<%= f.label :description, "Course Description" %>
							<%= f.text_area :description, cols: 3, class:"materialize-textarea", required: true %>
						</div>

						<div class="input-field">
							<%= f.label :duration, "Course Duration" %>
							<%= f.number_field :duration, class: "validate", required: true %>
						</div>

						<div class="input-field">
							<%= f.label :price, "Course Price" %>
							<%= f.text_field :price, class: "validate", required: true %>
						</div>
						<%= f.submit "Create", class: "btn" %>
					<% end %>
					</div>
				</div>
		</div>
	</div>
