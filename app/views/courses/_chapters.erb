<table class="table table-bordered table-striped" id="sortable-chapters" data-course-id=<%= @course.id %>>
	<thead>
		<tr>
			<th>
				Chapter
			</th>
			<th>
				Chapter Actions
			</th>
			<th>
				Lesson Actions
			</th>
		</tr>
	</thead>
	<tbody>
		<% @course.chapters.order(:row_order).each do |chapter| %>
		<tr data-item-id=<%= "#{chapter.id}" %> class="item">
			<td>
				<%= chapter.name %>
			</td>
			<td>
				<%= link_to 'Edit', edit_course_chapter_path(@course, chapter) %> | 
				<%= link_to 'Delete', course_chapter_path(course, chapter), remote: true, method: :delete, data: { confirm: 'Do you really want to delete?' } %>
			</td>
			<td>
				<%= link_to 'Show Lessons', course_chapter_path(@course, chapter) %> | <%= link_to 'Add Lesson', new_course_chapter_lesson_path(@course, chapter) %>
			</td>
		</tr>
	</tbody>
	<% end %>
</table>