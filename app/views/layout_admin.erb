<!DOCTYPE html>
<html lang="en">
	<head>

		<!-- Normalize -->
		<link href="/css/normalize/normalize.css" rel="stylesheet">
		<!-- Materialize -->
		<link rel="stylesheet" href="/css/materialize/materialize.min.css">
		<!-- Custom CSS -->
		<link href="/css/application.css" rel="stylesheet">
		<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
		<title>Your E-learning platform | @title </title>
	</head>

	<body>
		<!-- Navbar goes here -->

		<%= erb :navbar %>
		<!-- Page Layout here -->
		<div class="row">

			<div class="col s12 m4 l3"> <!-- Note that "m4 l3" was added -->

				<%= erb :"backend/sidebar" %>
				<!-- Grey navigation panel
			This content will be:
			3-columns-wide on large screens,
			4-columns-wide on medium screens,
			12-columns-wide on small screens  -->

			</div>

			<div class="col s12 m8 l9"> <!-- Note that "m8 l9" was added -->

				<%= yield %>
				<!-- Teal page content
			This content will be:
			9-columns-wide on large screens,
			8-columns-wide on medium screens,
			12-columns-wide on small screens  -->

			</div>

		</div> 


		<!-- Javascript -->
		<!-- Aplication javascript -->
		<script src="/js/jquery/jquery.min.js"></script>
		<script src="/js/bootstrap/bootstrap.min.js"></script>
		<script src="/js/materialize/ripples.min.js"></script>
		<script src="/js/materialize/material.min.js"></script>
		<script src="/js/application.js"></script>
		<script>
$(document).ready(function() {
	// This command is used to initialize some elements and make them work properly
	$.material.init();
});
		</script>
	</body>
</html>
