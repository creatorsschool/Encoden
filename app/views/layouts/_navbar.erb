<!-- Dropdown Structure -->
<ul id="dropdown1" class="dropdown-content">
	<% if signed_in? %>
		<!-- <li><%= current_user.email %></li> -->
		<li><%= link_to 'Edit Profile', edit_user_path(current_user) %></li>
		<li class="divider"></li>
		<li>
			<%= link_to 'Sign out', sign_out_path, method: :delete %>
		<% end %>
		</li>
</ul>
<!-- Main Navigation -->
<nav class="teal darken-1">
	<div class="nav-wrapper">
		<a href="/" class="brand-logo">Encoden</a>
		<a href="#" data-activates="mobile-demo" class="button-collapse"><i class="material-icons">menu</i></a>
		<ul id="nav-mobile" class="right hide-on-med-and-down">
			<li><a href="#">Help</a></li>
			<li><a href="#">Contact</a></li>
			<!-- Dropdown Trigger -->
			<% if signed_in? %>
				<li>
					<a class="dropdown-button" href="#!" data-activates="dropdown1">
						<img src="<%= current_user.avatar.url %>" alt="User avatar" class="profile-img circle responsive-img">
						<i class="tiny material-icons right">arrow_drop_down</i>
					</a>
				</li>
			<% end %>
			<% if !signed_in? %>
				<li>
					<%= link_to 'Sign in', sign_in_path, class:"teal lighten-1" %>
				<% end %>
				</li>
		</ul>
		<!-- Mobile menu -->
		<ul class="side-nav" id="mobile-demo">
			<li><a href="/">Home</a></li>
			<li><a href="#">About</a></li>
			<li><a href="#">Profile</a></li>
			<li><a href="#">Contact</a></li>
		</ul>
	</div>
</nav>
