<div class="row">
	<div class="col s12 m4 l3 card teal lighten-5">
		<%= render partial: '/admin/sidebar' %>
	</div>
	<div class="col s12 m8 l9">
		<div class="row">
			<h1>Edit your chapter</h1>
			<%= form_for @chapter, url: course_chapter_path do |f| %>
			<div class="row">
				<div class="col s6">
					<div class="input-field">
						<%= f.label :name, "Chapter Name" %>
						<%= f.text_field :name, class: "validate", required: true %>
					</div>
					<div class="input-field">
						<%= f.label :description, "Chapter Description" %>
						<%= f.text_area :description, cols: 3, class:"materialize-textarea", required: true %>
					</div>
					<%= f.submit "Update", class: "btn" %>
				</div>
				<% end %>
			</div>
		</div>
	</div>
</div>