<div class="row">
	<div class="col s12 m4 l3 card teal lighten-5">
		<%= render partial: '/admin/sidebar' %>
	</div>
	<div class="col s12 m8 l9">
		<div class="col-md-9">
			<div class="row">
				<div class="col-md-10">
					<h1><%= @chapter.name %></h1>
					<p><%= @chapter.description %></p>
					<h2>Lessons:</h2>
					<ol>
						<% @chapter.lessons.each do |lesson| %>
						<li><%= link_to lesson.name, course_chapter_lesson_path(params[:course_id], params[:id], lesson) %></li>
						<% end %>
					</ol>

				</div>
				<%= link_to "Add Lesson", new_course_chapter_lesson_path(params[:course_id], params[:id]), class:"btn" %>
			</div>
		</div>
	</div>
</div>