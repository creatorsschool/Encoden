<div class="container-fluid">
	<div class="col-md-9">
		<div class="row">
			<div class="col-md-10">
				<ol>
					<h3>Lessons</h3>
					<% @lesson.resources.each do |resource| %>
						<%= link_to resource.file.file.filename, resource.file.url %>
					<% end %>
					<%= form_for :resource, method: :patch, html: { multipart: true } do |f| %>
						<%= f.label :file %>
						<%= f.file_field :file %>
						<%= f.submit "Upload", class: "btn" %>
					<% end %>
					<li>
						Name: <%= @lesson.name %>
					<%= link_to "Delete", course_chapter_lesson_path, class: "btn", method: :delete %>
					<%= link_to "Edit", edit_course_chapter_lesson_path, class: "btn" %>
					<ul>
						<li>
							Description: <%= @lesson.description %>
					</li>
					</ul>
					</li>
				</ol>
			</div>
		</div>
	</div>
