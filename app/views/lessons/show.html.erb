<div class="container-fluid">
	<div class="col-md-9">
		<div class="row">
			<div class="col-md-10">
					<% @course.chapters.each do |chapter| %>
						<ol>
							<h3>Lessons</h3>
							<% chapter.lessons.each do |lesson| %>
								<li>
									Name: <%= lesson.name %>
								<ul>
									<li>
										Description: <%= lesson.description %>
								</li>
								</ul>
								</li>
							<% end %>
						</ol>
					<% end %>
			</div>
		</div>
	</div>
</div>
