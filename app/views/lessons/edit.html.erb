<div class="row">
	<h1>Let's Edit Your Lesson!</h1>
	<%= form_for @lesson, url: course_chapter_lesson_path do |f| %>
		<p>
		<div class="row">
			<div class="input-field col s6">
				<%= f.label :name %><br>
				<%= f.text_field :name %>
			</div>
		</div>
		</p>
		<p>
		<div class="row">
			<div class="input-field col s6">
				<%= f.label :description %><br>
				<%= f.text_area :description %>
			</div>
		</div>
		</p>
		<p>
		<%= f.submit class: "btn" %>
		</p>
	<% end %>
</div>
